extends ../layout/index.pug

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Global
            span.font-normal Realtors
        h2.text-center.text-2xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="nombre") Nombre Completo
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre Completo" type="text" name="nombre")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mt-3.mb-3.font-bold(for="email") Correo Electrónico
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo Electrónico" type="email" name="email")
